package br.com.udemy.poo;

public class App{
	
public static void main(String[] args) {
		System.out.println("Aprendendo POO com Java");
		
		Pessoa pessoa1 = new Pessoa();
		pessoa1.nome = "Fulano";
		pessoa1.idade = 21;
		
		System.out.println(pessoa1.nome);
		System.out.println(pessoa1.idade);
		
		Pessoa pessoa2 = new Pessoa();
		pessoa2.nome = "Ciclano";
		pessoa2.idade = 23;
		
		System.out.println(pessoa2.nome);
		System.out.println(pessoa2.idade);
		
		Carro meuCarro = new Carro();
		meuCarro.Ano = 2021;
		meuCarro.Modelo = "Jeep";
		meuCarro.Cor = "Preto";
		
		System.out.println(meuCarro.Ano);
		System.out.println(meuCarro.Modelo);
		System.out.println(meuCarro.Cor);
		System.out.println("Meu carro Ã© um: " + meuCarro.Modelo + "." + "Ano: " + meuCarro.Ano + "." + "Na cor: " + meuCarro.Cor + ".");
	}

}
